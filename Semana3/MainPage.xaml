<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3.MainPage">

    <StackLayout>

        <Label Text="Tarea3-LuisMorocho" HorizontalTextAlignment="Center" 
               VerticalTextAlignment="Start" TextColor="DarkBlue" FontSize="30"/>

        <Entry x:Name ="txtUser" 
               Placeholder="Ingrese el Usuario">
        </Entry>


        <Entry x:Name ="txtPass" 
               Placeholder="Ingrese la contraseña"
                IsPassword="True">
        </Entry>


        <Button x:Name="btnVentana"
                Text="Abrir"
                Clicked="btnVentana_Clicked">
        </Button>
        
        
    </StackLayout>

</ContentPage>
